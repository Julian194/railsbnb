<h1>Edit <%= @listing.title  %></h1>
<%= render partial: "shared/errors" %>
<form action="<%= host_listing_path(@listing) %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PUT">
  <label>Title</label>
  <input type="text" id="title" name="listing[title]" value="<%= @listing.title %>">
  <label>About</label>
  <textarea id="about" name="listing[about]"><%= @listing.about %></textarea>
  <label>How many people maximum can stay?</label>
  <input type="number" name="listing[max_guests]" id="max_guests" value="<%= @listing.max_guests %>" min="1" max="100" step="1">
  <label for="nightly_price">Nightly Price</label>
  <input type="number" id="nightly_price" name="listing[nightly_price]" value="<%= @listing.nightly_price %>" min="1" step="1">
  <label for="cleaning_fee">Cleaning Fee</label>
  <input type="number" id="cleaning_fee" name="listing[cleaning_fee]" value="<%= @listing.cleaning_fee %>" min="1" step="1">
  <label for="status">Status</label>
  <select name="listing[status]">
    <% Listing.statuses.keys.each do |status| %>
      <option <%= 'selected' if @listing.status == status %>><%= status  %></option>
    <% end %>
  </select>
  <input type="submit" value="Update listing">
</form>